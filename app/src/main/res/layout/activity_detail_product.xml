<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".DetailProductActivity">
    <!--Wrapper-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Description-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--Image Product-->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_product_dtl"
                    android:layout_width="match_parent"
                    android:layout_height="420dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/clothes1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </com.google.android.material.imageview.ShapeableImageView>
                <!--End Image Product-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_nameproduct_dtl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Roller Rabit"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_shop_dtl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vodo Odelle Dress"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="11dp"
                                android:src="@drawable/star"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(320 Review)"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/border_active"
                            android:backgroundTint="#EEEEEE"
                            android:paddingHorizontal="20dp"
                            android:layout_marginVertical="2dp">

                            <TextView
                                android:id="@+id/decrease_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="30sp"
                                android:layout_marginRight="10dp"/>

                            <TextView
                                android:id="@+id/quantity_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="16sp"
                                android:layout_marginRight="10dp"/>

                            <TextView
                                android:id="@+id/increase_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:textSize="20sp"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available Stock"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/size_clothes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <HorizontalScrollView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/sizeClothes_S"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="14dp"
                                    android:background="@drawable/border"
                                    android:orientation="vertical"
                                    android:paddingVertical="12dp"
                                    android:paddingHorizontal="20dp">
                                    <TextView
                                        android:id="@+id/textClothes_S"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="S"
                                        android:textColor="#888888"
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/sizeClothes_M"
                                    android:layout_marginRight="14dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:orientation="vertical"
                                    android:paddingVertical="12dp"
                                    android:paddingHorizontal="18dp">
                                    <TextView
                                        android:id="@+id/textClothes_M"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="M"
                                        android:textColor="#888888"
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/sizeClothes_L"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="14dp"
                                    android:background="@drawable/border"
                                    android:orientation="vertical"
                                    android:paddingVertical="12dp"
                                    android:paddingHorizontal="21dp">
                                    <TextView
                                        android:id="@+id/textClothes_L"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="L"
                                        android:textColor="#888888"
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/sizeClothes_XL"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="14dp"
                                    android:background="@drawable/border"
                                    android:orientation="vertical"
                                    android:paddingVertical="12dp"
                                    android:paddingHorizontal="15dp">
                                    <TextView
                                        android:id="@+id/textClothes_XL"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="XL"
                                        android:textColor="#888888"
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/sizeClothes_XXL"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:orientation="vertical"
                                    android:paddingVertical="12dp"
                                    android:paddingHorizontal="7dp">
                                    <TextView
                                        android:id="@+id/textClothes_XXL"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="XXL"
                                        android:textColor="#888888"
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/size_shoes"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Size"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <HorizontalScrollView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:id="@+id/sizeShoes_39"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="14dp"
                                    android:background="@drawable/border"
                                    android:orientation="vertical"
                                    android:paddingVertical="12dp"
                                    android:paddingHorizontal="15dp">
                                    <TextView
                                        android:id="@+id/textShoes_39"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="39"
                                        android:textColor="#888888"
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/sizeShoes_40"
                                    android:layout_marginRight="14dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/border"
                                    android:orientation="vertical"
                                    android:paddingVertical="12dp"
                                    android:paddingHorizontal="15dp">
                                    <TextView
                                        android:id="@+id/textShoes_40"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="40"
                                        android:textColor="#888888"
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/sizeShoes_41"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="14dp"
                                    android:background="@drawable/border"
                                    android:orientation="vertical"
                                    android:paddingVertical="12dp"
                                    android:paddingHorizontal="15dp">
                                    <TextView
                                        android:id="@+id/textShoes_41"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="41"
                                        android:textColor="#888888"
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/sizeShoes_42"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="14dp"
                                    android:background="@drawable/border"
                                    android:orientation="vertical"
                                    android:paddingVertical="12dp"
                                    android:paddingHorizontal="15dp">
                                    <TextView
                                        android:id="@+id/textShoes_42"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="42"
                                        android:textColor="#888888"
                                        android:textStyle="bold"
                                        android:textSize="22sp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </HorizontalScrollView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/txt_desc_dtl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/lorem_Text"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="\n\n\n\n\n\n"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <!--End Description-->

        <!--Back And Cart-->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/btn_back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:onClick="gotoMain"
                    android:src="@drawable/btnback" />
            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btn_share"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/iconshare" />
        </LinearLayout>
        <!--End Back And Cart-->
        
        <!--Button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@color/white"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price"/>
                <TextView
                    android:id="@+id/txt_price_dtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="$250.00"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_addToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="30dp"
                android:paddingVertical="14dp"
                android:background="@drawable/border_active"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/cartborderwhite"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="Add to cart"/>
            </LinearLayout>
        </LinearLayout>
        <!--End Button-->

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--End Wrapper-->
</androidx.appcompat.widget.LinearLayoutCompat>